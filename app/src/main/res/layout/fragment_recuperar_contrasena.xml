<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fusion_ondas_tres"
    android:fillViewport="true"
    android:padding="24dp"
    tools:context=".RecuperarContrasena">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Tarjeta contenedora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_fondo"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título -->
            <TextView
                android:id="@+id/rec_txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Recuperación de contraseña"
                android:textColor="@color/negro"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/robotocondensed"/>

            <!-- Input de correo electrónico -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                app:startIconDrawable="@android:drawable/ic_dialog_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rec_txtcorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/robotocondensed"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/azul_cuatro" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón enviar -->
            <Button
                android:id="@+id/rec_btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azul_seis"
                android:padding="12dp"
                android:text="Enviar token"
                android:textColor="@android:color/white"
                android:fontFamily="@font/robotocondensed"/>

            <!-- Layout token oculto -->
            <LinearLayout
                android:id="@+id/rec_lyToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/spinner_fondo"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone">

                <!-- Input de Token -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa tu token"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/rec_txttoken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotocondensed"
                        android:gravity="center"
                        android:inputType="text"
                        android:maxLength="6"
                        android:textColor="@color/azul_cuatro" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón confirmar token -->
                <Button
                    android:id="@+id/rec_btnconfirmar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/verde"
                    android:padding="12dp"
                    android:text="Confirmar token"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
