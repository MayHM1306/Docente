<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_tres"
    tools:context=".Grupos">

    <!-- ONDA SUPERIOR -->
    <LinearLayout
        android:id="@+id/onda_superior"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/fusion_ondas_tres"
        android:orientation="vertical"
        android:layout_gravity="top" />

    <!-- CONTENEDOR PARA LA FOTO DEL USUARIO -->
    <RelativeLayout
        android:id="@+id/foto_flotante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:elevation="20dp">

        <!-- FOTO DEL USUARIO -->
        <ImageView
            android:id="@+id/perfil_foto_usuario"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="6dp"
            android:src="@drawable/grupo_estado_icono"
            android:scaleType="centerCrop"
            android:elevation="12dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <!-- CONTENEDOR PRINCIPAL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contenedor_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/blanco"
        >

        <!-- Contenedor General -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:background="@drawable/grupo_fondo_img">


            <!-- BUSCAR GRUPO -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EstiloInputAzulBuscar"
                app:hintEnabled="false"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/icono_buscar"
                app:endIconTint="@color/azul_siete"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/grupo_txtBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Buscar grupo"
                    android:background="@android:color/transparent"
                    android:textColor="@color/azul_seis"
                    android:textColorHint="@color/azul_cuatro"
                    android:imeOptions="actionSearch"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_grupos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingBottom="20dp"
                android:clipToPadding="false"
                android:scrollbars="none" />




        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:contentDescription="Guardar cambios"
        app:backgroundTint="@color/azul_siete"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/icono_guardar" />


</FrameLayout>