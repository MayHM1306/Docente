<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo con gradiente -->
    <gradient
        android:startColor="@color/azul_siete"
        android:endColor="@color/azul_tres"
        android:angle="45" />

    <!-- Bordes redondeados -->
    <corners android:radius="16dp" />

    <!-- Borde sutil -->
    <stroke
        android:width="2dp"
        android:color="@color/azul_cuatro" />

    <!-- Sombra suave -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
