<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Degradado azul de izquierda a derecha -->
    <gradient
        android:startColor="#0E4C85"
    android:endColor="#1E73BE"
    android:angle="0" />

    <!-- Bordes redondeados -->
    <corners android:radius="40dp" />

    <!-- Sombra sutil (opcional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
